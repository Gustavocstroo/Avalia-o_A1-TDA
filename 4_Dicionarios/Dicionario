# Programa que cadastra produtos usando um dicionário
# Cada produto tem nome, preço e quantidade

produtos = {}

print("Cadastro de produtos (digite 'sair' para encerrar)\n")

while True:
    nome = input("Nome do produto: ")

    if nome.lower() == "sair":
        break

    preco = float(input("Preço: "))
    quantidade = int(input("Quantidade: "))

    produtos[nome] = {
        "preco": preco,
        "quantidade": quantidade
    }

print("\nProdutos cadastrados:")
for nome, info in produtos.items():
    print(f"{nome} - R$ {info['preco']:.2f} - Quantidade: {info['quantidade']}")
